#include <stdio.h>
#include <stdlib.h>
#define reservar_memoria (nodo*)malloc(sizeof(nodo));

struct nodo{
	int dato;
	nodo *siguiente;
	
	};
	
	nodo *pila;
	//funciones pila
	void insertar_elementos(int &, nodo *&);
	void quitar_elemtos(int &, nodo *&);
	bool pila_vacia(nodo *);
	void mostrar_elemtos(int &,nodo *&);
	bool buscar_elemento(int , nodo *);
	void pedir_dato();
	void quitar_elemento(int &dato, nodo *&pila);
	void editar_elemento();
	void ordenar_elemento();
	//prototipo menu
	void menu_pila();
	void menu_quitar(int &, nodo *);
	
	int main(){
		menu_pila();
		
	}
	void menu_pila(){
		int n, dato;
		nodo *pila;
		int opcion;
		do{	
			printf("\n_____menu_____\n");
			printf("\n....1 .insertar....\n");
			printf("\n....2 .mostrar....\n");
			printf("\n....3 .buscar....\n");
			printf("\n....4 .editar....\n");
			printf("\n....5 .eliminar dc....\n");
			printf("\n....6 .pila vacia....\n");
			printf("que quieres hacer\n");
			scanf("%d",&opcion);
			system("cls");
			
			switch(opcion){
				case 1:pedir_dato();
				break;
				case 2:mostrar_elemtos(dato,pila);
				break;
				case 3:buscar_elemento(dato,pila);
				break;
				case 4:menu_quitar(dato,pila);
				break;
				case 5:editar_elemento();
				break;
				case 6:ordenar_elemento();
				break;
				case 7:pila_vacia(pila);
				break;
				case 0:exit('0');
				break;
				
			}
			
		}while(opcion!=0);
		
	}
	
